<mah:MetroWindow x:Class="WpfDBApp.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                    Title="WPF DB app"
                    Height="720"
                    Width="1150"
                    WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Import -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="Import CSV"
                    Width="140"
                    mah:ControlsHelper.CornerRadius="4"
                    mah:ControlsHelper.ContentCharacterCasing="Normal"
                    Background="{DynamicResource MahApps.Brushes.Accent}"
                    Foreground="White"
                    Command="{Binding ImportCommand}"/>

            <Button Content="Clear database"
                    Width="140"
                    mah:ControlsHelper.CornerRadius="4"
                    mah:ControlsHelper.ContentCharacterCasing="Normal"
                    Background="{DynamicResource MahApps.Brushes.Accent}"
                    Foreground="White"
                    Margin="12,0, 0,0"
                    Command="{Binding ClearDatabaseCommand}"/>
            
            <ProgressBar Width="220"
                         Height="20"
                         Maximum="100"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Value="{Binding ImportProgress}"
                         Margin="12,0, 0,0"/>
        </StackPanel>

        <!-- Filters -->
        <GroupBox Header="Filters"
                  Grid.Row="1"
                  Margin="0,0,0,12">

            <WrapPanel Margin="8">

                <StackPanel Orientation="Horizontal" Margin="0,0,12,8">
                    <TextBlock Text="Date from:" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding DateFrom}" Width="130" Margin="6,0"/>
                    <TextBlock Text="to:" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding DateTo}" Width="130" Margin="6,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,12,8">
                    <TextBlock Text="First name:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding FirstNameFilter}" Width="130"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,12,8">
                    <TextBlock Text="Last name:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding LastNameFilter}" Width="130"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,12,8">
                    <TextBlock Text="Sur name:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SurNameFilter}" Width="130"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,12,8">
                    <TextBlock Text="City:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CityFilter}" Width="130"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,12,8">
                    <TextBlock Text="Country:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CountryFilter}" Width="130"/>
                </StackPanel>
                
                <Button Content="Apply filters"
                        Width="150"
                        mah:ControlsHelper.CornerRadius="4"
                        mah:ControlsHelper.ContentCharacterCasing="Normal"
                        Background="{DynamicResource MahApps.Brushes.Accent}"
                        Foreground="White"
                        Command="{Binding ApplyFiltersCommand}"/>
            </WrapPanel>
        </GroupBox>

        <!-- Data grid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Persons}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  Margin="0,0,0,10"/>

        <!-- Export -->
        <DockPanel Grid.Row="3">

            <GroupBox Header="Export fields"
                      DockPanel.Dock="Left"
                      Margin="0,0,10,0">
                <WrapPanel Margin="8" x:Name="FieldsPanel">
                    <CheckBox Content="Date" IsChecked="{Binding ExportFields.Date}"/>
                    <CheckBox Content="FirstName" IsChecked="{Binding ExportFields.FirstName}"/>
                    <CheckBox Content="LastName" IsChecked="{Binding ExportFields.LastName}"/>
                    <CheckBox Content="SurName" IsChecked="{Binding ExportFields.SurName}"/>
                    <CheckBox Content="City" IsChecked="{Binding ExportFields.City}"/>
                    <CheckBox Content="Country" IsChecked="{Binding ExportFields.Country}"/>
                </WrapPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Export to Excel"
                        Width="160"
                        Margin="5"
                        mah:ControlsHelper.CornerRadius="4"
                        mah:ControlsHelper.ContentCharacterCasing="Normal"
                        Background="{DynamicResource MahApps.Brushes.Accent}"
                        Foreground="White"
                        Command="{Binding ExportExcelCommand}"/>
                
                <Button Content="Export to XML"
                        Width="160"
                        Margin="5"
                        mah:ControlsHelper.CornerRadius="4"
                        mah:ControlsHelper.ContentCharacterCasing="Normal"
                        Background="{DynamicResource MahApps.Brushes.Accent}"
                        Foreground="White"
                        Command="{Binding ExportXmlCommand}"/>
            </StackPanel>

        </DockPanel>
    </Grid>
</mah:MetroWindow>
