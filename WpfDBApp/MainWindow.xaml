<Window x:Class="WpfDBApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSV Import / Export" Height="700" Width="1100">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- Import -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Import CSV" Width="120" Click="ImportCsv_Click"/>
            <ProgressBar x:Name="ImportProgress" Width="200" Height="20" Margin="10,0,50,0"/>
            <Button Content="Clear database" Width="120" Click="ClearDatabase_Click"/>
        </StackPanel>


        <!-- Filters -->
        <GroupBox Header="Filter" Grid.Row="1" Margin="0,0,0,10">
            <WrapPanel Orientation="Horizontal" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                    <Label Content="Date from:"/>
                    <DatePicker x:Name="DateFrom" Width="120"/>
                    <Label Content="to:" Margin="5,0,0,0"/>
                    <DatePicker x:Name="DateTo" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                    <Label Content="First name:" Margin="10,0,0,0"/>
                    <TextBox x:Name="FirstNameBox" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                    <Label Content="Last name:" Margin="10,0,0,0"/>
                    <TextBox x:Name="LastNameBox" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                    <Label Content="Middle name:" Margin="10,0,0,0"/>
                    <TextBox x:Name="SurNameBox" Width="120"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                    <Label Content="City:" Margin="10,0,0,0"/>
                    <TextBox x:Name="CityBox" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                    <Label Content="Country:" Margin="10,0,0,0"/>
                    <TextBox x:Name="CountryBox" Width="120"/>
                </StackPanel>
                <Button Content="Apply filters" Width="120" Click="ApplyFilters_Click"/>
            </WrapPanel>
        </GroupBox>

        <!-- Database table -->
        <DataGrid x:Name="PersonsGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True" />

        <!-- Export fields -->
        <DockPanel Grid.Row="3" Margin="0,10,0,0">
            <GroupBox Header="Export fields" DockPanel.Dock="Left">
                <WrapPanel x:Name="FieldsPanel" Margin="5">
                    <CheckBox Content="Date" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox Content="FirstName" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox Content="LastName" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox Content="SurName" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox Content="City" IsChecked="True" Margin="0,0,10,0"/>
                    <CheckBox Content="Country" IsChecked="True" Margin="0,0,10,0"/>
                </WrapPanel>
            </GroupBox>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Export to Excel" Width="150" Margin="5" Click="ExportExcel_Click"/>
                <Button Content="Export to XML" Width="150" Margin="5" Click="ExportXml_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>